<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sub_background"
    android:background="@drawable/table_item_text_background"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:orientation="horizontal"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:id="@+id/main_phoneContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="3"
            android:paddingVertical="@dimen/booking_detail_time_padding_size"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tisch 01"
                android:background="@drawable/table_item_text_background"
                android:textSize="@dimen/booking_detail_name_text_size"/>

            <LinearLayout
                android:id="@+id/productDescriptionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/hour_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/UP_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/booking_default_background"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/booking_detail_time_padding_size"
            android:layout_marginEnd="2dp">

            <TextView
                android:id="@+id/text_UP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxLines="1"
                android:text="01"
                android:textSize="@dimen/booking_detail_name_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qty_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/booking_default_background"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/booking_detail_time_padding_size"
            android:layout_marginEnd="2dp">

            <TextView
                android:id="@+id/text_qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxLines="1"
                android:text="01"
                android:textSize="@dimen/booking_detail_name_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/booking_default_background"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/booking_detail_time_padding_size"
            android:layout_marginEnd="2dp">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:maxLines="1"
                android:text="01"
                android:textSize="@dimen/booking_detail_name_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>