<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/secondaryLightColor" />
            <gradient
                android:angle="0"
                android:startColor="@color/secondaryLightColor"
                android:endColor="@color/secondaryLightColor"
                />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" />
            <padding android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"/>
        </shape>
    </item>
</layer-list>