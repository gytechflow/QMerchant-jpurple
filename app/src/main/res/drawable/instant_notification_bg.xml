<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#BEFF6D00" />
            <gradient
                android:angle="0"
                android:startColor="#BEFF6D00"
                android:endColor="#BEFF6D00"
                />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="0dp" />
            <padding android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"/>
        </shape>
    </item>
</layer-list>