<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="cm.clear.qmerchant.R"/>
        <variable
            name="viewManager"
            type="cm.clear.qmerchant.modules.tables.events.ui.EventAdapter.BindingObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@drawable/secnd_color_margin_bottom_rounded">
        <LinearLayout
            android:id="@+id/ref_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:id="@+id/ref_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/table_list_item_text_transparent_background"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{(view)->viewManager.onRefClicked(view)}"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_numbers_code_24"
                        app:tint="@color/secondaryDarkColor"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.ref}"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_weight="4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/table_list_item_text_transparent_background">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_customer_account_foreground32"
                        app:tint="@color/secondaryDarkColor"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.id}"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_weight="4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/table_list_item_text_transparent_background">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_deck_24"
                        app:tint="@color/secondaryDarkColor" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.places}"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_weight="4"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/name_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="2dp"
            app:layout_constraintTop_toBottomOf="@id/ref_main_container"
            app:layout_constraintBottom_toTopOf="@id/time_main_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/table_list_item_text_transparent_background"
                android:layout_marginEnd="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.name}"
                    android:maxLines="1"
                    android:gravity="start"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/table_list_item_text_transparent_background">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_outline_phone_24"
                        app:tint="@color/secondaryDarkColor"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.phone}"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_weight="4"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/name_main_container"
            app:layout_constraintBottom_toTopOf="@id/options_main_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/table_list_item_text_transparent_background"
                android:layout_marginEnd="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_event_calendar_foreground"
                        app:tint="@color/secondaryDarkColor"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.date}"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_weight="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/table_list_item_text_transparent_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_timer_24"
                        app:tint="@color/secondaryDarkColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@{viewManager.startTime}"
                        android:textAlignment="center"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="5"/>

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@{viewManager.endTime}"
                        android:textAlignment="center"
                        android:layout_weight="4"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/options_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/time_main_container"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_assignResource_container_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/booking_selected_item_table_background"
                android:padding="7dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{(view)->viewManager.onAssignedClicked(view)}"
                android:visibility="@{viewManager.assignButtonVisibility}"
                android:backgroundTint="@{viewManager.getAssignButtonColor(textConfirmBooking.getContext())}">
                <TextView
                    android:id="@+id/text_assignResource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.getAssignButtonText(textConfirmBooking.getContext())}"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_confirmBooking_container_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/booking_confirm_item_table_background"
                android:layout_marginHorizontal="2dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{(view)->viewManager.onConfirmedClicked(view)}"
                android:visibility="@{viewManager.confirmButtonVisibility}"
                android:backgroundTint="@{viewManager.getConfirmButtonColor(textConfirmBooking.getContext())}">
                <TextView
                    android:id="@+id/text_confirmBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.getConfirmButtonText(textConfirmBooking.getContext())}"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="14dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_removeResource_container_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/booking_cancel_item_table_background"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{(view)->viewManager.onRemoveClicked(view)}"
                android:visibility="@{viewManager.cancelButtonVisibility}"
                android:backgroundTint="@{viewManager.getCancelButtonColor(textConfirmBooking.getContext())}">
                <TextView
                    android:id="@+id/text_removeResource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewManager.getCancelButtonText(textConfirmBooking.getContext())}"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="14dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>