<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            android:layout_centerHorizontal="true"
            android:alignmentMode="alignBounds"
            android:columnCount="4"
            android:rowOrderPreserved="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0"
                android:layout_gravity="fill_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ordersImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:minHeight="150dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_orders" />
                <TextView
                    android:id="@+id/ordersText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orders_title"
                    android:textSize="30dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0"
                android:layout_gravity="fill_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/resaImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:minHeight="150dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_reservations" />
                <TextView
                    android:id="@+id/resaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reservations_title"
                    android:textSize="30dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0"
                android:layout_gravity="fill_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/settingsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:minHeight="150dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_settings" />

                <TextView
                    android:id="@+id/settingsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_title"
                    android:textSize="30dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0"
                android:layout_gravity="fill_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/settings2Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:minHeight="150dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_reportings" />

                <TextView
                    android:id="@+id/settings2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reportings_title"
                    android:textSize="30dp"
                    android:textAlignment="center" />
            </LinearLayout>

        </GridLayout>


        <Button
            android:id="@+id/button_second"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/next_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>